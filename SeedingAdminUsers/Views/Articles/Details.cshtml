    {
        <div>
            <label>Commented by</label>
            <label>@item.UserName</label>
            <label>    on    </label>
            <label>@item.CommentDate</label>
        </div>
        <div>
            @item.CommentBody
        </div>
    }
</div>
@if ((User.Identity.IsAuthenticated)&& (!User.IsInRole("Restricted")))
{
   
@Html.Partial("_addComment", new SeedingAdminUsers.Models.Comment { ArticleID = Model.ArticleID })
}
